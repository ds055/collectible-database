<section class="text-gray-600 body-font">
  <div class='flex justify-center'>
    <h2
      class='pb-4 font-bold text-4xl md:text-6xl lg:text-8xl m-6 bg-gradient-to-tr from-violet-700 via-fuchsia-300 to-teal-400 bg-clip-text text-transparent'>
      {{first_name}}'s Dashboard</h2>
  </div>
  <div class="flex flex-row justify-center pt-6">
    <button class="border-2 border-black bg-indigo-500 rounded-lg text-white text-lg px-0.5 me-3"
      id="addCollectionBtn">Add Collection</button>
    <button class="border-2 border-black bg-indigo-500 rounded-lg text-white text-lg px-0.5 me-3"
      id="addCoolectibleBtn">Add Coolectible</button>
  </div>
  <form id="view-all-form" class="flex justify-center items-center mt-5">
    <label class="font-bold text-lg" for="view-all">View All Your:</label>
    <select class="ms-3 me-4" id="view-all-choice" name="type-select">
      <option value="figure">Action Figures</option>
      <option value="card">Cards</option>
      <option value="coin">Coins</option>
      <option value="music">Music</option>
    </select>
    <input class="cursor-pointer border-2 border-black bg-indigo-500 rounded-lg text-white text-lg px-0.5 me-3"
      type="submit">
  </form>
  {{!-- Modal Container --}}
  <div class="flex flex-row justify-center sticky inset-x-1/4 inset-y-1/4 z-50">
    <!-- Trigger/Open The Modal -->
    <!-- The Modal -->
    <div id="myModal"
      class="modal absolute hidden w-fit h-fit bg-indigo-200 border-4 border-indigo-600 rounded-md drop-shadow-2xl">
      <!-- Modal content Generated Here Dynamically from script-->
    </div>
  </div>

  <div class="flex flex-col mt-8">
    <h2 class="font-bold text-2xl mb-4">Recent Additions</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      {{#each recentItems as |item|}}
      <div class="bg-white rounded-lg shadow-lg p-4">
        <img class="w-full h-64 object-cover rounded-t" src="{{item.image}}" alt="{{item.name}}">
        <div class="p-4">
          <h3 class="font-bold text-xl mb-2">
            {{#if (eq item.type 'card')}}
            {{item.name}}
            {{else if (eq item.type 'coin')}}
            {{item.denomination}}
            {{else if (eq item.type 'music')}}
            {{item.album_name}}
            {{/if}}
          </h3>
          {{!-- <p class="text-gray-700">{{item.description}}</p> --}}
        </div>
        {{!-- <div class="p-4 border-t border-gray-200">
          <a href="/items/{{item.id}}" class="text-indigo-500 hover:text-indigo-600 font-bold text-sm">View Item</a>
        </div> --}}
      </div>
      {{/each}}
    </div>
  </div>
</section>

{{!-- Script to generate and handel modal interaction --}}
<script src="/js/view-all.js"></script>
<script src="/js/add-item-modal.js"></script>